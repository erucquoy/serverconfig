# INSTALL NGINX
wget http://nginx.org/keys/nginx_signing.key
apt-key add nginx_signing.key
echo "deb http://nginx.org/packages/debian/ stretch nginx" | sudo tee -a /etc/apt/sources.list
echo "deb-src http://nginx.org/packages/debian/ stretch nginx" | sudo tee -a /etc/apt/sources.list
apt-get update
apt-get -y install nginx
service nginx restart

# INSTALL PHP 7 FPM
apt-get -y install php-fpm php-mysql php-cli
# IF on port
nano /etc/php/7.0/fpm/php.ini
cgi.fix_pathinfo=0
# FROM 
listen = /run/php/php7.0-fpm.sock
#Â TO
listen = 127.0.0.1:9000
service php7.0-fpm restart

# INSTALL UFW
apt-get install ufw
ufw status

# UFW CONFIG
nano /etc/default/ufw
# ENABLE IPV6
IPV6=yes

ufw disable
ufw enable

ufw default deny incoming

ufw default allow outgoing

# ALLOW / DENY PORT 
ufw allow ssh
ufw allow 22/tcp
# RANGE
ufw allow 1000:2000/tcp

# ALLOW IP
ufw allow from 192.168.255.255

# DELETE A RULE
ufw delete allow 80/tcp
# OR
ufw status numbered
ufw delete [number]

# RESET
ufw reset
